<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>

        <!-- Project Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hostel Complaints and Services"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <!-- Project Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Hostel Complaints and Services app provides a comprehensive platform for hostel residents to easily manage their complaints, request services, and track the progress of each issue. Whether it's about maintenance, cleaning services, or room concerns, this app ensures a smooth communication flow between students and hostel management."
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:lineSpacingExtra="6dp"
            android:textSize="16sp"/>

        <!-- Key Features -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key Features"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Easy Complaint Submission: Lodge complaints with a simple form."
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:lineSpacingExtra="6dp"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Service Requests: Request services like maintenance, cleaning, and more."
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:lineSpacingExtra="6dp"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Track Progress: Monitor the status of your complaints and requests in real time."
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:lineSpacingExtra="6dp"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Quick Access: View complaint history and previous service requests."
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:lineSpacingExtra="6dp"
            android:textSize="16sp"/>

        <!-- Inspirational Quote -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="“The best way to find yourself is to lose yourself in the service of others.”"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textStyle="italic"/>

        <!-- Team Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meet the Team"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our dedicated team is committed to enhancing your hostel living experience by providing fast and efficient solutions to all your complaints and service requests. We work tirelessly to ensure that your needs are met with the highest level of satisfaction. We are excited to bring this app to you and continuously strive to improve its features based on your feedback."
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:lineSpacingExtra="6dp"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Project Lead: Kumar Vishesh"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:lineSpacingExtra="6dp"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Lead Developer: Kumar Vishesh"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:lineSpacingExtra="6dp"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- UX/UI Designer: Kumar Vishesh"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:lineSpacingExtra="6dp"
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>
