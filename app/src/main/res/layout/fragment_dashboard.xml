<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/black"
    tools:context=".DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Looking For "
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_gravity="center"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_linear_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/button_account"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:text="Account"
                    android:drawableTop="@drawable/ic_account"
                    android:background="@drawable/button_background"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/button_tracking"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:text="Tracking"
                    android:drawableTop="@drawable/ic_tracking"
                    android:background="@drawable/button_background"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/button_about_us"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:text="About Us"
                    android:drawableTop="@drawable/ic_about_us"
                    android:background="@drawable/button_background"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="-13dp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/button_complaints"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:text="Complaints"
                    android:drawableTop="@drawable/ic_complaints"
                    android:background="@drawable/button_background"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/button_services"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:text="Services"
                    android:drawableTop="@drawable/ic_services"
                    android:background="@drawable/button_background"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/button_settings"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:text="Settings"
                    android:drawableTop="@drawable/ic_settings"
                    android:background="@drawable/button_background"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="-13dp"
                    android:gravity="center"/>

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="Previous Searches "
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_gravity="center"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_linear_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/button_previous_complaints"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:text="Complaints"
                    android:drawableTop="@drawable/ic_complaints"
                    android:background="@drawable/button_background"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/button_previous_services"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:text="Services"
                    android:drawableTop="@drawable/ic_services"
                    android:background="@drawable/button_background"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"/>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>