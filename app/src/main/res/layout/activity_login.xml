<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <TextView
        android:id="@+id/registration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/registration_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/registration_title"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_linear_layout"
        android:padding="20dp">

        <EditText
            android:id="@+id/login_input"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/registration_title"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="12dp"
            android:hint="Registration Number or Email *"
            android:textColorHint="@color/hint"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_input"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/ic_password"
            android:drawablePadding="12dp"
            android:hint="Password *"
            android:textColorHint="@color/hint"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/register_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/registration_form"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_corners"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/register_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="No Account? Register here"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>